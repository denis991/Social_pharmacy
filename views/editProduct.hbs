<form name="formEditProduct">
  <div class='card' style='width: 18rem;'>
    <h2>{{name}}</h2>
          <img src={{img}} class='card-img-top' alt='...' />
          <div class='card-body'>
            <input class='card-title' placeholder="Название"></input>
            <input class='card-text' placeholder="Описание"></input>
            <input class='card-text' placeholder="Цена"></input>
            <input style="display: inline;" class='card-text discount-price' placeholder="Цена со скидкой"></input>
            <button type="click" href='#' data-id={{id}} class='btn btn-primary'>Сохранить изменения</button>
</form>
